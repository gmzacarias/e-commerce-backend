{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "controllers/*": [
        "controllers/*"
      ],
      "lib/*": [
        "lib/*"
      ],
      "models/*": [
        "models/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "repositories/*": [
        "repositories/*"
      ],
      "services/*": [
        "services/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
